<h1><%= link_to @book.title, book_path(@book) %></h1>

<div class="headings">
<%= book_section_headings %>
</div>

<div class="body">
<div class="actions">
<%= link_to "edit", "", :title => "NOT IMPLEMENTED YET" %>
</div>
<%= @section.body_html %>
</div>

<%- unless @section.links.empty? -%>
<div class="subsections">
  <h3>Sub-sections</h3>
  <ul>
    <%- for link in @section.links do -%>
    <li><%= subsection_link(link) %></li>
    <%- end -%>
  </ul>
</div>
<%- end -%>
